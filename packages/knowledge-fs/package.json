{
  "name": "@kb-labs/knowledge-fs",
  "version": "0.1.5",
  "description": "Filesystem-backed utilities for the KB Labs knowledge orchestrator.",
  "type": "module",
  "main": "dist/index.js",
  "types": "dist/index.d.ts",
  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "default": "./dist/index.js"
    }
  },
  "files": [
    "dist",
    "README.md",
    "LICENSE"
  ],
  "sideEffects": false,
  "scripts": {
    "clean": "rimraf dist",
    "build": "pnpm clean && tsup --config tsup.config.ts",
    "dev": "tsup --config tsup.config.ts --watch",
    "type-check": "tsc --noEmit",
    "test": "vitest run",
    "test:watch": "vitest watch"
  },
  "dependencies": {
    "@kb-labs/knowledge-contracts": "workspace:*",
    "@kb-labs/knowledge-core": "workspace:*",
    "fast-glob": "^3.3.2",
    "fs-extra": "^11.0.0",
    "picomatch": "^4.0.2"
  },
  "devDependencies": {
    "@kb-labs/devkit": "link:../../../kb-labs-devkit",
    "@types/fs-extra": "^11.0.0",
    "@types/node": "^24.3.3",
    "@types/picomatch": "^4",
    "rimraf": "^6.0.1",
    "tsup": "^8.5.0",
    "typescript": "^5.6.3",
    "vitest": "^3.2.4"
  }
}
